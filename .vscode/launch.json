    "version": "0.2.0",
    "configurations": [
        {
            "name": "Linting: flake8",
            "type": "python",
            "request": "launch",
            "module": "flake8",
            "args": [
                "--config=${workspaceFolder}/central_database/setup.cfg"
            ],
            "justMyCode": true
        },
        {
          "name": "Python: Attach to Django",
          "type": "python",
          "request": "attach",
          "connect": {
              "host": "django",
              "port": 5678
          },
          "pathMappings": [
              {
                  "localRoot": "${workspaceFolder}/central_database",
                  "remoteRoot": "/app"
              }
          ]
      }
    ]
}
